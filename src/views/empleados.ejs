<%- include('partials/_header.ejs') %>

    <h1>Registro de Empleados</h1>
    <div class="contenedorGeneral">
        <div class="contenedorTabla">
            <table class="tabla">
                <thead class="tablaHeader">
                    <th class="numero">NÂº</th>
                    <th>Nombre</th>
                    <th>Cargo</th>
                    <th>Acciones</th>
                </thead>
                <tbody>
                    <% if (data) { %>
                    <% for( let index = 0; index < data.length; index++ ) { %>
                        <tr>
                            <td> <%= (index + 1)  %>  </td>
                            <td> <%= data[index].nombreEmpleado  %>  </td>
                            <td> <%= data[index].cargoEmpleado  %>  </td>
                            <td class = "botones"> 
                            <button>
                                 <span class="material-icons" style="color: #3294CA;">edit</span>
                                    <a href="/update/ <%= data[index].idEmpleado %> ">Modificar</a>
                            </button>
                            <button>
                                 <span class="material-icons" style="color: #FA171E;">delete</span>
                                    <a href="/delete/ <%= data[index].idEmpleado %> " >Eliminar</a>
                            </button>
                            </td>
                        </tr>
                    <% } %>
                    <% } %>
                </tbody>
            </table>
        </div>
        <div class="contenedorFormulario">
            <form action="/add" method="post">
                <input type="text" name="nombreEmpleado" placeholder="Nombre">
                <input type="text" name="cargoEmpleado" placeholder="Cargo">
                <button type="submit" class="btn-guardar">
                Guardar Empleado
            </button>
            </form>
        </div>
    </div>
<%- include('partials/_footer.ejs') %>